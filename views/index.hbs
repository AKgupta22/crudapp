{{>header}}
<title>CRUD||APP</title>
{{>navbar}}

<div class="container-fluid">
    <h5 class="bgcol text-light text-center p-2 mt-1">Employee Record</h5>
    <div class="table-responsive">
        <table class="table">
            <tbody>
                <tr>
                    <th>Object Id</th>
                    <th>Employee ID</th>
                    <th>Name</th>
                    <th>Salary</th>
                    <th>Designation</th>
                    <th>City</th>
                    <th>State</th>
                    <th></th>
                    <th></th>
                </tr>
                {{#each data}}
                <tr>
                    <td>{{_id}}</td>
                    <td>{{id}}</td>
                    <td>{{name}}</td>
                    <td>{{Salary}}</td>
                    <td>{{Dsg}}</td>
                    <td>{{City}}</td>
                    <td>{{State}}</td>
                    <td> <a href='/edit/{{_id}}'> <i class="fa-solid fa-pen-to-square"></i></a> </td>
                    <td> <a href='/delete/{{_id}}'><i class="fa-solid fa-delete-left"></i></a> </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
{{>footer}}